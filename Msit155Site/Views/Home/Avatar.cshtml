
@{
    ViewData["Title"] = "Avatar";
}

<h1>Avatar</h1>
<img id="img1" src="" />

@section Scripts{
    <script>
        const img1 = document.querySelector('#img1');

            (async() => {
                const url = '@Url.Content("~/api/avatar/2")'
                const response = await fetch(url);
                const datas = await response.blob();

                console.log(datas);

                img1.src = URL.createObjectURL(datas);
            
            })();


    </script>
}
