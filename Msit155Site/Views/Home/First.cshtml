        btnStart.addEventListener('click', async () => {
            abortController = new AbortController();
            const signal = abortController.signal;
            try {
                imgLoader.style.display = "inline";
                btnStart.setAttribute("disabled", "disabled");
                btnStart.value = "執行中...";

